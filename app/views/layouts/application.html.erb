<!DOCTYPE html>
<html>
<head>
  <title>Tilt</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  </head>

  <body>


    <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
      <%= link_to cocktails_path, class: "navbar-brand" do %>
      <div class="logo"><%= image_tag "logotilt.png" %>
      <h3 class="ml-3">Tilt cocktails</h3></div>
      <% end %>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse">
        <%= link_to "Create a cocktail", new_cocktail_path, class: "btn btn-flat" %>
      </div>
    </div>

    <%= yield %>
    <%= javascript_include_tag "application" %>
    <%= javascript_pack_tag "application" %>

    <div class="footer">
      <div class="footer-links">
        <a href="https://www.instagram.com/bartilt.sinchon/?hl=fr"><i class="fab fa-instagram"></i></a>
        <a href="https://www.facebook.com/bartilt.kr/"><i class="fab fa-facebook"></i></a>
      </div>
    </div>
  </body>
  </html>
