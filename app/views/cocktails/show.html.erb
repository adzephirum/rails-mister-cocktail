
<h1><%= @cocktail.name %></h1>
<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
<% @cocktail.doses.each do |dose| %>
 <h2> <%=  dose.ingredient.name %> | <%= dose.description %> </h2>

<%= link_to "Delete dose", dose_path(dose), method: :delete %>
<% end %>

<%= link_to "Add dose",  new_cocktail_dose_path(@cocktail) %>
<%= link_to "Back to cocktails", cocktails_path %>

