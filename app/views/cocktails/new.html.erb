 <div class="container d-flex justify-content-center flex-column h-100">
 <h1> Create new Cocktail</h1>

<%= simple_form_for [@cocktail] do |f| %>
  <%= f.input :name %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit "Submit", class: "button is-rounded" %>
<% end %>
</div>